<div class="login-container responsive-login">
    <% if (title) { %>
        <h1 class="login-title"><%= title %></h1>
    <% } %>

    <% if (message) { %>
        <p class="error-message"><%= message %></p>
    <% } %>

    <form class="login-form" method="post" action="/account/login">
        <label for="email">Email</label>
        <input id="email" name="email" class="login-email" type="email" autocomplete="email" required />

        <label for="password">Password</label>
        <input id="password" name="password" class="login-password" type="password" autocomplete="current-password" required />

        <button id="loginButton" class="login-button" type="submit">Login</button>
        <p class="signup-link">No account? <a href="/account/register">Sign up</a></p>
    </form>
</div>

