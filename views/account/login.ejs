<div class="login-container responsive-login">
    <% if (title) { %>
        <h1 class="login-title"><%= title %></h1>
    <% } %>

    <% if (message && message.length > 0) { %>
        <div class="flash-message"><%= message[0] %></div>
    <% } %>

    <form class="login-form" method="post" action="/account/login">
        <label for="email">Email</label>
        <input id="email" name="email" class="login-email" type="email" autocomplete="email" required>

        <label for="password">Password</label>
        <div class="password-group">
            <span class="password-rules">There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</span>
            <input id="password" name="password" class="login-password" type="password" autocomplete="current-password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <div class="show-password-row">
                <span id="show-password-login" class="login-show-password">Show Password</span>
            </div>
        </div>

        <button id="loginButton" class="login-button" type="submit">Login</button>
        <p class="signup-link">No account? <a href="/account/registration">Sign up</a></p>
    </form>
</div>

